#!/usr/bin/makepkg
# Maintainer: basigur

pkgname=papirus-icon-theme-nordic
pkgver=20190802
pkgrel=1
pkgdesc="Icons themes papirus color folder nordic."
arch=('any')
url="https://github.com/basigur/papirus-folders"
license=("LGPL3")
conflicts=('papirus-folders-nordic')
replaces=('papirus-folders-nordic')
provides=('papirus-folders-nordic')
depends=('gtk-update-icon-cache')
source=("papirus-nordic.bash::https://github.com/basigur/papirus-folders/raw/master/script/papirus-nordic.bash")

sha256sums=('SKIP')


build() {
bash papirus-nordic.bash
rm -rf "${pkgname}-${pkgver}"/usr/share/icons/*/*.cache
}


package() {
  cp -r "${pkgname}-${pkgver}"/usr "${pkgdir}"
    rm -rf "${pkgname}-${pkgver}"
}


